<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>true</IsPackable>
    <Version>0.1.0</Version>
    <Authors>Jim Atas</Authors>
    <Description>Lightweight and composable library for shaping IQueryable&lt;T&gt; with filtering, sorting, and pagination. Supports both expression- and string-based criteria.</Description>
    <RepositoryUrl>https://github.com/jimatas/Zift</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>
  
  <ItemGroup>
    <InternalsVisibleTo Include="Zift.EntityFrameworkCore" />
    <InternalsVisibleTo Include="Zift.Tests" />
  </ItemGroup>

</Project>
